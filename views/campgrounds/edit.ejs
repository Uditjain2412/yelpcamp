<% layout('layouts/boilerplate')%>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%=campground._id%>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%=campground.title %>"
          required
        />
        <div class="invalid-feedback">Please select a valid title.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%=campground.location %>"
          required
        />
        <div class="invalid-feedback">Please select a valid location.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            value="<%=campground.price %>"
            required
          />
          <div class="invalid-feedback">Please select a valid price.</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        >
<%= campground.description%></textarea
        >
        <div class="invalid-feedback">Please select a valid description.</div>
      </div>

      <div class="mb-4">
        <label class="form-label" for="image">Add More Image(s)</label>
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          multiple
        />
      </div>

      <div class="mb-3">
        <p class="card-text">Select the images to be deleted</p>
        <% campground.images.forEach(function(img, i){ %>
        <img
          src="<%= img.url.replace('/upload', '/upload/t_media_lib_thumb') %>"
          class="img-thumbnail me-1"
          alt=""
        />
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
          <label class="form-check-label" for="image-<%=i%>"> </label>
        </div>
        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info mt-2">Update Campground</button>
      </div>
    </form>
    <div class="mb-3">
      <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>
    </div>
  </div>
</div>
